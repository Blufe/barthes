# coding: utf-8
require 'json'

describe '<%= name %>' do
	before(:all) do
		$store = {}
		@env = JSON.parse File.read(ENV['BARTHES_ENV_PATH'])
	end

	before(:each) do
		client_klass = Object.const_get(@env['client_class'])
		@client = client_klass.new(@env)
	end

	<%= block.call %>

	after(:all) do
		File.write('.store', JSON.pretty_generate($store))
	end
end
